<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header') %>
    <div class="container">
      <h1>Courses</h1>
      <button
        role="button"
        class="btn btn-outline-info mb-3"
        data-toggle="collapse"
        data-target="#newCourse"
        role="button"
        aria-expanded="false"
        aria-controls="newCourse"
      >
        New Course
      </button>
      <div class="collapse" id="newCourse">
        <div class="card card-body mb-3">
          <form method="POST">
            <input type="hidden" name="__action" value="newCourse" />
            <div class="form-group">
              <label for="courseName">Name</label>
              <input
                class="form-control"
                name="name"
                id="courseName"
                placeholder="Data Structures"
              />
            </div>
            <div class="form-group">
              <label for="courseDept">Department</label>
              <input
                class="form-control"
                name="dept"
                id="courseDept"
                placeholder="CS"
              />
            </div>
            <div class="form-group">
              <label for="courseNumber">Number</label>
              <input
                class="form-control"
                name="number"
                id="courseNumber"
                type="number"
                placeholder="225"
              />
            </div>
            <button type="submit" class="btn btn-primary">Create course</button>
          </form>
        </div>
      </div>
      <div class="list-group">
        <% courses.forEach(function(course, idx) { %>
        <% if (idx % 2) {%>
        <a
          href="/course/<%= course.id %>"
          class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center"
        >
           <%= course.name %> (<%= course.dept %> <%= course.number %>)
          <form method="POST" style="margin-bottom: 0">
            <input type="hidden" name="__action" value="deleteCourse" />
            <input type="hidden" name="id" value="<%= course.id %>" />
            <button type="submit" class="btn btn-lg btn-outline-danger">
              &times;
            </button>
          </form>
        </a>
        <% } else {%>
        <a
            href="/course/<%= course.id %>"
            class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center"
            style="filter: brightness(110%)"
        >
            <%= course.name %> (<%= course.dept %> <%= course.number %>)
            <form method="POST" style="margin-bottom: 0">
                <input type="hidden" name="__action" value="deleteCourse" />
                <input type="hidden" name="id" value="<%= course.id %>" />
                <button type="submit" class="btn btn-lg btn-outline-danger">
                    &times;
                </button>
            </form>
        </a>
        <% } %>
        <% }) %>
      </div>
    </div>
  </body>
</html>
